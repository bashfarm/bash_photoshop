{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": ["webpack.*.js"],
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        // "indent": ["none", "tab"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-restricted-modules": ["warn"]
    }
}
